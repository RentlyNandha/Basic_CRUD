<h1>Listing <%= pluralize(@players.count,"player")%></h1>
<table>
  <thead>
  <tr>
  <td>First Name</td>
  <td>Last Name</td>
  <td>   _       </td>
  <td>      Actions  </td>
<td>   </td>
</tr>
  </thead>
  <tbody>
  <% @players.each do |player| %>
  <tr>
      <td><%=player.first_name %></td>
      <td><%=player.last_name %></td>
      <td><%= link_to  "Show", "/players/"+player.id.to_s %></td>
      <td><%= link_to  "Edit", "/players/"+player.id.to_s+"/edit" %></td>
      <td><%= link_to "Delete","players/#{player.id}", method: "delete", data:{ confirm: "Are you sure?"} %></td>
      
  </tr>
  <%end%>
  </tbody>
  </table>
  <%= link_to  "New Player", "/players/new" %>