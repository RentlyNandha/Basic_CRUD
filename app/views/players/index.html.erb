<h1>Listing <%= pluralize(@players.count,"player")%></h1>
<table>
  <thead>
  <tr>
  <td>First Name</td>
  <td>Last Name</td>
  <td>Actions</td>
  </tr>
  </thead>
  <tbody>
  <% @players.each do |player| %>
  <tr>
      <td><%=player.first_name %></td>
      <td><%=player.last_name %></td>
  </tr>
  <%end%>
  </tbody>
  </table>
  <%= link_to  "New Player", "/players/new" %>